#include<stdio.h>
#include<stdlib.h>

/**
05
*Criar um vetor com 10 elementos numericos inteiros digitados
06
*Calcular a soma destes elementos e exibir o vetor e a soma
07
*/
void alocvet(){
    int N,tam,soma=0,media=0;
    
    printf("Digite o tamanho do vetor a ser alocado:");
    scanf("%d",&tam);
    
    N =(int*)malloc(tam * sizeof(int));
    
    for(int i=0;i<tam;i++){
        scanf("%d",&N);
        printf("%d foi alocado\n", N);
    }
    for(int i=0; i<tam; i++){

        soma=soma+N[i];
    }
}
int main(){
    //declaração das variaveis

    int tam=10, A[tam], i, soma=0,media;

    //entrada dos valores digitados
    for(i=0; i<tam; i++){

        printf("Digite o %d. valor: ", i+1);
        scanf("\n%d", &A[i]);
    }

    //calculo da soma

    for(i=0; i<tam; i++){

        soma=soma+A[i];
    }

    //saida de dados

    for(i=0; i<tam; i++){

        printf("\nA[%d] = %d", i+1, A[i]);

    }
    media=soma/A;
    printf("\n\nSoma: %d\n\n", soma) ;
    return 0;
}
