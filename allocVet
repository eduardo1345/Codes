#include <stdio.h>
#include <stdlib.h>


int main(){
     int i, n;
     float *v, media, soma;
     printf("Digite tamanho do vetor:");
     
    scanf("%d", &n);

    v = (float*) malloc(n*sizeof(float));
    for (i = 0; i < n; i++) {
        scanf("%f", &v[i]);
    }
    for ( i = 0; i < n ;i++ ) {
        soma += v[i];
    }
    media = soma/n;
    printf ( "\nSoma total: %.0f\n", soma );
    printf("Media = %.0f\n", media,soma);
   
    free(v);
    
    return 0;
}

