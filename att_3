#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <string.h>

typedef struct {
    int chave;
}item;

typedef struct nozin *Ponteiro;

typedef struct nozin{
    item elemento;
    Ponteiro esquerda;
    Ponteiro direita;
}nozin;

bool lerArq(){
    FILE *arq;

    arq=fopen("entrada.txt","r");
    if(arq != EOF (palavra /string)){
        tag->pagid //numero
        string->consulta->insere id

    }

    fclose(arq);

    return true;
}
