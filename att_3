int main() {

    lerArq();
    Ponteiro raiz;
    item X;
    inicia_arvore(&raiz);
    X.chave=10;
    inserir(&raiz, X);
    X.chave= 20;
    inserir(&raiz, X);
    X.chave=4;
    inserir(&raiz, X);
    X.chave =3;
    inserir(&raiz, X);
    X.chave =15;
    inserir(&raiz, X);
    X.chave =22;
    inserir(&raiz, X);
    X.chave =5;
    inserir(&raiz, X);
    Em_ordem(&raiz);

    return 0;
}
